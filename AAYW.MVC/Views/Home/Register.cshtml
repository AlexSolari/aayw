@using AAYW.Core.Models.View;
@model RegistrationModel
@{
    ViewBag.Title = "Register";
}

<div class="mui-row center">
    <div class="mui-col-md-4 mui-col-lg-offset-4">

        <h2>@Html.Text("Register")</h2>
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="error">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="row">
                <div class="control mui-textfield">
                    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { placeholder = Html.Text("Login") } })
                </div>
            </div>
            <div class="row">
                <div class="control mui-textfield">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeholder = Html.Text("Password") } })
                </div>
            </div>
            <div class="row">
                <div class="control mui-textfield">
                    @Html.EditorFor(m => m.Confirmation, new { htmlAttributes = new { placeholder = Html.Text("Confirmation") } })
                </div>
            </div>
            <div class="row">
                <div class="control">
                    @Html.Submit(Html.Text("CreateAccount"), ButtonType.Raised)
                </div>
            </div>
        }
    </div>
    

</div>
